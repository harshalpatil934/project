<% layout("layouts/boilerplate") %>
<style>
    #filter{
       display: flex;
       flex-wrap: wrap;
       align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }
    .filter a{
        text-decoration: none;
        color:black;
        opacity: 0.7;
    }
    .filter a:hover{
        opacity: 1;
    }

    .filter:hover{
     opacity:1;
     cursor: pointer;
    }

    .filter p{
      font-size: 0.8rem;
    }
    .gst{
        display: none;
    }
    .switch{
        border: 2px solid black;
        border-radius:1rem;
        height: 3.5rem;
        padding: 1rem;
        margin-left: 200px;
        margin-top: 0.5rem;
    }
</style>


    
    <!-- <h3>all listing</h3> -->
    <!-- <form method="get" action="/listings/new">
        <button>create new listing</button>
    </form> -->
    <div id="filter">
        <div class="filter">
            <a href="/listings"><div><i class="fas fa-fire"></i></div>
            <div><p>Trending</p></div></a>
        </div>
        <div class="filter">
            <a href="/beach"><div><i class="fas fa-umbrella-beach"></i></div>
            <div><p>beaches</p></div></a>
        </div>
        <div class="filter">
             <a href="/forest"><div><i class="fas fa-tree"></i></div>
            <div><p>forests</p></div></a>
        </div>
        <div class="filter">
            <a href="/mountain"> <div><i class="fas fa-mountain"></i></div>
            <div><p>mountains</p></div>
            </a>
            </div>
        <div class="switch">
            <div class="form-check-reverse form-switch">
           <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
           <label class="form-check-label" for="flexSwitchCheckDefault">display after GST </label>
           </div>
        </div>
     </div>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 mt-3">
        <% for (let allListing of allListings){ %>
        <div class="cd">
            <a href="/listings/<%=allListing._id%>" class="listing-link">
    <div class="card col list-card">
  <img src="<%=allListing.image.url%>" class="card-img-top" alt="listing-img" style="height: 20rem;">
  <div class="card-body">
    <p class="card-text"> <b><%=allListing.title%> </b><br>
        &#8377 <%=allListing.price.toLocaleString("en-IN")%> / night
        &nbsp;&nbsp;<i class="gst">+18%GST</i>
    </p>
  </div>
</div>
</a>
</div>
<%}%>
    </div>

    <script>
    let a= document.getElementById("flexSwitchCheckDefault");
    a.addEventListener("click",()=>{
    let gst=document.getElementsByClassName("gst");
    for(gs of gst){
        
        if(gs.style.display!="inline"){
        gs.style.display="inline";
        }else{
            gs.style.display="none";
        }
    }
    })
    </script>




