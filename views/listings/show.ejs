<% layout("layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">

      
    <h3>Listing details</h3>
        </div>
    <div class="card col-6 offset-3">
        <img src="<%=list.image%>" class="card-img-top show-img" alt="listing-image">
  <div class="card-body">
    <p class="card-text">
       <b> <%=list.title%></b><br>
       <%=list.description%> <br>
       &#8377 <%=list.price.toLocaleString("en-IN")%> <br>
       <%=list.location%> <br>
       <%=list.country%>
    </p>
  </div>
    </div>
   
</div>
     <div class="btns">
    <a  class="btn btn-dark col-1 offset-3" style="height: 38px; width: 74px;" href="/listings/<%=list._id%>/edit">Edit </a>
    <br><br>
    <form method="post" action="/listings/<%=list._id%>?_method=DELETE">
        <button class="btn btn-dark offset-5 " id="del">Delete </button>
    </form>
</div>
</body>