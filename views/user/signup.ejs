<% layout("layouts/boilerplate") %>

<div class="row mt-3">
     <h3  class="col-6 offset-3">signup on RentNRest</h3>
        <div class="col-6 offset-3">
            <form method="post" action="/signup" class="needs-validation" novalidate>
        <div class="mb-3">
        <label for="username" class="form-label">username</label>
        <input type="text" name="username" id="username" class="form-control" required >
        
        </div>
        <div class="mb-3">
        <label for="email" class="form-label">email</label>
        <input type="text" name="email" id="email"  class="form-control" required >
       
        </div>
        <div class="mb-3">
        <label for="password" class="form-label">password</label>
        <input type="password" name="password" id="password" class="form-control" required >
        <div class="invalid-feedback">Enter valid password</div>
         <div class="valid-feedback">seems okay</div>
        
        </div>
        <div class="mb-3">
            <button class="btn btn-success">sumit</button>
        </div>
        
            </form>
        </div>
</div> 